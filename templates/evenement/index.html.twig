{% extends "base.html.twig" %}

{% block body %}
    <h1>Evenement</h1>

    <div class="row">
        {% for evenement in evenements %}
            <div class="col-lg-3">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">
                            {{ evenement.name }}
                        </h2>
                        <h2>
                            {{evenement.price}} â‚¬
                        </h2>
                       <p>Du {{evenement.getDatedebut() | date('d-m-Y')}} au {{evenement.getDatedebut() | date('d-m-Y')}}</p>
                        
                        <a class="btn btn-primary" href="{{ path('app_evenement_show', { id: evenement.id }) }}">
                            Voir
                        </a>

                        {% if date() <  evenement.getDatedebut() %}
                            <button class="btn btn-success">A venir</button>

                        {% elseif date() >= evenement.getDatefin() %}
                            <button class="btn btn-danger">Passer</button>
                        {% else %}
                            <button class="btn btn-warning">En Cour</button>
                        {% endif %}
                        
                        
                        
                        
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}